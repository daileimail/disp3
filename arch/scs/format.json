{
	"project": {
		"navspaces": ["impl.clients.*","impl.databases.*","impl.servers.*", "impl.scripts.*","impl.modules.*"],
		"ip": "127.0.0.1",
		"roles": {
			"$default": {
				"uis": ["proto.uis"],
				"apis": ["proto.apis"],
				"schemas": ["proto.schemas"]
			}
		}
	},
	"proto": {
		"schemas": {
			"$list":{
				"fields": {
					"$list": {
						"type": {"$type":"string"}
					},
					"$default": {
						"_id": {
							"text": "ID",
							"ondemand": true,
							"type": "ObjectId"
						}
					}
				}
			}
		},
		"apis": {
			"$list": {
				"method": "post",
				"route": {
					"$type": "string",
					"$eq": "name"
				},
				"midwares": {
					"$type": "string",
					"$multi": true
				},
				"controllers": {
					"$list": {
					}
				},
				"params": {
					"$list": {
						"text": {"$type": "string"}
					}
				}
			}
		},
		"uis": {
			"$list": {
				"title": {"$type": "string"},
				"elements": {
					"$list": {
						"type": {"$type": "string"},
						"withSchema": {
							"$type": "string",
							"$from": "proto.schemas"
						},
						"fields": {
							"$list": {
								"elements": {
									"$list": {}
								}
							}
						},
						"addons": {
							"$list": {
								"elements": {
                  "$list": {}
                }
							}
						}
					}
				},
				"withApis": {
					"$multi": true,
					"$type": "string",
					"$from": "proto.apis"
				}
			}
		}
	},
	"impl": {
		"databases": {
			"$list": {
				"type": "mongo",
				"model": "table",
				"host": {"$type":"string"},
				"port": {"$type":"number"},
				"username": {"$type":"string"},
				"password": {"$type":"string"},
				"database": "test",
				"withSchemas": {
					"$multi": true,
					"$type": "string",
					"$from": "proto.schemas"
				}
			}
		},
		"servers": {
			"$list": {
				"type": "nodejs",			
				"ip": {"$type": "string"},
				"port": {"$type": "number"},
				"protocol": "http",
				"statics": {
					"$list": {
						"$type": "string"
					}
				},
				"authflags": {
					"$type": "string",
					"$multi": true
				},
				"log": {"$type":"number"},
				"withApis": {
					"$multi": true,
					"$type": "string",
					"$from": "proto.apis"
				},
				"withDatabases": {
					"$multi": true,
					"$type": "string",
					"$from": "impl.databases"
				}
			}
		},
		"clients": {
			"$list": {
				"type": "html",
				"withUis": {
					"$multi": true,
					"$type": "string",
					"$from": "proto.uis"
				},
				"withServer": {
					"$type": "string",
					"$from": "impl.servers"
				},
				"withServers": {
					"$multi": true,
					"$type": "string",
					"$from": "impl.servers"
				}
			}
		},
		"crons": {
			"$list":{
			}
		},
		"scripts": {
			"$list": {
			}
		}
	}
}
